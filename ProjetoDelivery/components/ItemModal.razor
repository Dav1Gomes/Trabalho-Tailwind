@namespace ProjetoDelivery.components

<div class="fixed inset-0 flex justify-center items-center backdrop-blur-md z-50 animate-fade-in-up">
    <div class="bg-white p-8 rounded-2xl shadow-2xl w-80 fade-in flex flex-col items-center transform transition-transform duration-300 hover:scale-105">
        <h2 class="text-2xl font-bold text-center text-black mb-4">@Titulo</h2>
        <p class="text-[#6836c5] text-center mb-6">@Descricao</p>

        <div class="flex flex-col w-full space-y-2">
            <button class="w-full bg-[#6836c5] hover:bg-purple-700 text-white font-semibold py-2 rounded">
                Confirmar
            </button>
            <button class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 rounded">
                Cancelar
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Titulo { get; set; } = "";
    [Parameter] public string Descricao { get; set; } = "";
    [Parameter] public EventCallback OnConfirmar { get; set; }
    [Parameter] public EventCallback OnFechar { get; set; }
}
