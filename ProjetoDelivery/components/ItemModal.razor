@namespace ProjetoDelivery.components

<div class="fixed inset-0 flex justify-center items-center backdrop-blur-md z-50">
    <div class="bg-white p-8 rounded-xl shadow-lg w-80 fade-in flex flex-col items-center">
        <h2 class="text-2xl font-bold text-center text-black mb-4">@Titulo</h2>
        <p class="text-[#6836c5] text-center mb-6">@Descricao</p>

        <div class="flex flex-col w-full space-y-2">
            <button class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded" @onclick="OnConfirmar">
                Confirmar
            </button>
            <button class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 rounded" @onclick="OnFechar">
                Cancelar
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Titulo { get; set; } = "";
    [Parameter] public string Descricao { get; set; } = "";
    [Parameter] public EventCallback OnConfirmar { get; set; }
    [Parameter] public EventCallback OnFechar { get; set; }
}
