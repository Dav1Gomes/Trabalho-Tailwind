<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-6 rounded-xl shadow-lg w-full max-w-md animate-fade-in">
        <h2 class="text-2xl font-bold mb-4">@Item.Nome</h2>
        <p class="mb-2 text-gray-700">Pre√ßo: R$ @Item.Preco</p>
        <p class="mb-2 text-gray-700">Tempo de preparo: @Item.TempoPreparo minutos</p>
        <p class="mb-4 text-gray-700">Nota: @Item.Nota</p>

        <div class="flex justify-end gap-4">
            <button class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400" @onclick="OnClose">Cancelar</button>
            <button class="px-4 py-2 rounded bg-green-500 hover:bg-green-600 text-white" @onclick="OnConfirmar">Confirmar Compra</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public ItemCardapio Item { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnConfirmar { get; set; }
}
