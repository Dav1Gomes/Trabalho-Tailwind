@page "/informacoes-logado"

<h1 class="text-3xl font-bold mb-4">Informações do Usuário</h1>

<div class="max-w-md mx-auto p-6 bg-white rounded shadow-md space-y-4">
    <input type="text" placeholder="Endereço" class="w-full p-2 border rounded" @bind="endereco" />
    <input type="text" placeholder="Número do Cartão de Crédito" class="w-full p-2 border rounded" @bind="cartao" />

    <button class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded" @onclick="SalvarInformacoes">Salvar Informações</button>
</div>

@if (MensagemSalva)
{
    <p class="text-green-500 text-center mt-4">Informações salvas! (não estão sendo persistidas ainda)</p>
}

@code {
    private string endereco = "";
    private string cartao = "";
    private bool MensagemSalva = false;

    private void SalvarInformacoes()
    {
        MensagemSalva = true;
    }
}
