@page "/informacoes-logado"
@inject UserStateService UserState


<div class="min-h-screen bg-gradient-to-b from-green-100 via-white to-white flex flex-col animate-fade-in-up">
    <div class="flex-grow flex flex-col items-center pt-24 p-6">
        <h1 class="text-4xl font-bold text-[#6836c5] mb-10 drop-shadow-lg text-center">Perfil</h1>

        <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-2xl space-y-6">
            <div class="flex flex-col items-center space-y-2">
                <h2 class="text-[#6836c5] font-bold text-xl text-center">
                    Olá, @UserState.UserName
                </h2>

                <p class="text-[#6836c5] font-semibold text-lg">Saldo disponível: <span class="text-black">R$ 100,00</span></p>
            </div>

            <hr class="border-t-2 border-[#6836c5] my-4" />

            <div>
                <h3 class="text-xl font-bold text-black mb-4">Histórico de Pedidos</h3>
                <ul class="space-y-2">
                    <li class="text-black">
                        <span class="font-semibold">BBQ Duplo</span> - Rústicos Pub - <span class="text-[#6836c5] font-bold">R$ 34,90</span>
                    </li>
                    <li class="text-black">
                        <span class="font-semibold">2 Pizzas de Calabresa (Família)</span> - Sabor da Massa - <span class="text-[#6836c5] font-bold">R$ 70,00</span>
                    </li>
                </ul>
            </div>

            <hr class="border-t-2 border-[#6836c5] my-4" />

            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <p class="text-black font-semibold">CEP: 12345-678</p>
                    <button class="text-[#6836c5] hover:text-purple-700">
