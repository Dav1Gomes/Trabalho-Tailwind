@page "/informacoes-logado"

<PageTitle>Minhas Informações</PageTitle>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
    <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Minhas Informações</h1>

        <div class="flex flex-col gap-4">
            <input type="text" class="border rounded p-2" placeholder="Endereço" @bind="Endereco" />
            <input type="text" class="border rounded p-2" placeholder="Número do Cartão de Crédito" @bind="CartaoCredito" />

            <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 rounded">
                Salvar (futuro)
            </button>
        </div>
    </div>
</div>

@code {
    private string Endereco { get; set; } = "";
    private string CartaoCredito { get; set; } = "";
}
