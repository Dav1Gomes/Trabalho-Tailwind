@page "/informacoes-logado"

<div class="min-h-screen bg-gradient-to-b from-green-100 via-white to-white flex flex-col animate-fade-in-up">
    <div class="flex-grow flex flex-col items-center pt-24 p-6">
        <h1 class="text-4xl font-bold text-center text-[#6836c5] mb-8 drop-shadow-lg">Informações de Usuário</h1>

        <div class="w-full max-w-md space-y-4">
            <input 
                type="text" 
                placeholder="Endereço" 
                class="w-full border-2 border-[#6836c5] rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#6836c5] text-black"
            />

            <input 
                type="text" 
                placeholder="Número do Cartão de Crédito" 
                class="w-full border-2 border-[#6836c5] rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#6836c5] text-black"
            />

            <button 
                class="w-full bg-[#6836c5] hover:bg-purple-700 text-white font-bold py-2 rounded-xl transform hover:scale-105 transition-transform"
            >
                Salvar
            </button>
        </div>
    </div>

    <Footer />
</div>
