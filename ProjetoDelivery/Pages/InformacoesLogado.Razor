@page "/informacoes-logado"
@inject UserStateService UserState

<div class="min-h-screen bg-gradient-to-b from-green-100 via-white to-white flex flex-col animate-fade-in-up">
    <div class="flex-grow flex flex-col items-center pt-24 px-4 sm:px-6">
        <h1 class="text-3xl sm:text-4xl font-bold text-[#6836c5] mb-8 drop-shadow-lg text-center">Perfil</h1>

        <div class="bg-white shadow-lg rounded-xl p-6 sm:p-8 w-full max-w-2xl space-y-6">
            <div class="flex flex-col items-center space-y-2 text-center">
                <h2 class="text-[#6836c5] font-bold text-xl">Olá, @UserState.UserName</h2>
                <p class="text-[#6836c5] font-semibold text-lg">Saldo disponível: <span class="text-black">R$ 100,00</span></p>
            </div>

            <hr class="border-t-2 border-[#6836c5]" />

            <div>
                <h3 class="text-xl font-bold text-black mb-4">Histórico de Pedidos</h3>
                <ul class="space-y-2 text-sm sm:text-base">
                    <li class="text-black">
                        <span class="font-semibold">BBQ Duplo</span> - Rústicos Pub - <span class="text-[#6836c5] font-bold">R$ 34,90</span>
                    </li>
                    <li class="text-black">
                        <span class="font-semibold">2 Pizzas de Calabresa (Família)</span> - Sabor da Massa - <span class="text-[#6836c5] font-bold">R$ 70,00</span>
                    </li>
                </ul>
            </div>

            <hr class="border-t-2 border-[#6836c5]" />

            <div class="space-y-4 text-sm sm:text-base">
                <div class="flex flex-col sm:flex-row sm:justify-between">
                    <p class="text-black font-semibold">CEP: 12345-678</p>
                    <button class="text-[#6836c5] hover:text-purple-700 mt-2 sm:mt-0">✏️</button>
                </div>
                <div class="flex flex-col sm:flex-row sm:justify-between">
                    <p class="text-black font-semibold">CPF: 123.456.789-00</p>
                    <button class="text-[#6836c5] hover:text-purple-700 mt-2 sm:mt-0">✏️</button>
                </div>
                <div class="flex flex-col sm:flex-row sm:justify-between">
                    <p class="text-black font-semibold">Cartão: **** **** **** 1234</p>
                    <button class="text-[#6836c5] hover:text-purple-700 mt-2 sm:mt-0">✏️</button>
                </div>
            </div>
        </div>
    </div>

    <Footer />
</div>

@code {
    protected override void OnInitialized()
    {
        UserState.OnChange += StateHasChanged;
    }
}
