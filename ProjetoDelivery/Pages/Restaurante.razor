@page "/restaurante/{RestauranteId:int}"
@using ProjetoDelivery.components
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-white p-6 flex flex-col items-center">
    <h1 class="text-4xl font-bold mb-8 text-black text-center">Cardápio</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl">
        @foreach (var item in Cardapio)
        {
            <div class="fade-in bg-green-200 border-2 border-[#6836c5] rounded-xl shadow-md p-6 cursor-pointer hover:scale-105 transform transition-transform duration-300"
                 @onclick="@(() => SelecionarItem(item))">
                <h2 class="text-2xl font-bold text-black">@item.Nome</h2>
                <p class="text-[#6836c5] mt-2">Preço: R$ @item.Preco</p>
                <p class="text-[#6836c5]">Tempo: @item.TempoPreparo min</p>
                <p class="text-[#6836c5]">Nota: @item.Nota ⭐</p>
            </div>
        }
    </div>

    @if (ItemSelecionado != null)
    {
        <div class="fixed inset-0 flex justify-center items-center backdrop-blur-sm bg-black bg-opacity-30 z-50">
            <div class="bg-white p-8 rounded-xl shadow-lg w-80 fade-in flex flex-col items-center">
                <h2 class="text-2xl font-bold text-center text-black mb-4">@ItemSelecionado.Nome</h2>
                <p class="text-[#6836c5] mb-2">Preço: R$ @ItemSelecionado.Preco</p>
                <p class="text-[#6836c5] mb-2">Tempo de preparo: @ItemSelecionado.TempoPreparo minutos</p>
                <p class="text-[#6836c5] mb-4">Nota: @ItemSelecionado.Nota ⭐</p>

                <div class="flex items-center space-x-4 mb-4">
                    <button class="bg-[#6836c5] hover:bg-purple-700 text-white font-bold py-1 px-3 rounded-full" @onclick="DiminuirQuantidade">➖</button>
                    <span class="text-black font-semibold text-xl">@Quantidade</span>
                    <button class="bg-[#6836c5] hover:bg-purple-700 text-white font-bold py-1 px-3 rounded-full" @onclick="AumentarQuantidade">➕</button>
                </div>

                <button class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded mb-2" @onclick="ConfirmarCompra">
                    Confirmar Compra
                </button>
                <button class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 rounded" @onclick="@(() => ItemSelecionado = null)">
                    Fechar
                </button>
            </div>
        </div>
    }

    @if (MensagemCompra != null)
    {
        <div class="fixed bottom-5 right-5 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg animate-fade-in-down z-50">
            @MensagemCompra
        </div>
    }
</div>

@code {
    [Parameter] public int RestauranteId { get; set; }

    private List<ItemCardapio> Cardapio = new()
    {
        new ItemCardapio { Nome = "X-Burger", Preco = 20.00, TempoPreparo = 30, Nota = 4.5 },
        new ItemCardapio { Nome = "Pizza de Calabresa", Preco = 35.00, TempoPreparo = 40, Nota = 4.8 },
        new ItemCardapio { Nome = "Sushi Combo", Preco = 50.00, TempoPreparo = 45, Nota = 4.3 },
    };

    private ItemCardapio? ItemSelecionado;
    private int Quantidade = 1;
    private string? MensagemCompra;

    private void SelecionarItem(ItemCardapio item)
    {
        ItemSelecionado = item;
        Quantidade = 1; 
    }

    private async Task ConfirmarCompra()
    {
        ItemSelecionado = null;
        MensagemCompra = $"Compra confirmada! {Quantidade}x {ItemSelecionado?.Nome ?? "Item"}";
        StateHasChanged();
        await Task.Delay(3000);
        MensagemCompra = null;
        StateHasChanged();
    }

    private void AumentarQuantidade()
    {
        Quantidade++;
    }

    private void DiminuirQuantidade()
    {
        if (Quantidade > 1)
        {
            Quantidade--;
        }
    }

    private class ItemCardapio
    {
        public string Nome { get; set; } = string.Empty;
        public double Preco { get; set; }
        public int TempoPreparo { get; set; }
        public double Nota { get; set; }
    }
}
