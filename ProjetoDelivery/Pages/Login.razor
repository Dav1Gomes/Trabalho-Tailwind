@page "/login"
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-gradient-to-b from-green-100 via-white to-white flex flex-col items-center justify-center pt-24 p-6 animate-fade-in-up">
    <h1 class="text-5xl font-extrabold text-[#6836c5] text-center mb-12 drop-shadow-lg animate-fade-in-down">
        Login no Boxly
    </h1>

    <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md flex flex-col items-center transform transition-transform duration-300 hover:scale-105">
        <form class="flex flex-col w-full space-y-6" @onsubmit="RealizarLogin">
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input 
                    type="email" 
                    @bind="Email" 
                    placeholder="Digite seu email" 
                    class="border-2 border-[#6836c5] rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-[#6836c5] text-black" 
                />
            </div>

            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Senha</label>
                <input 
                    type="password" 
                    @bind="Senha" 
                    placeholder="Digite sua senha" 
                    class="border-2 border-[#6836c5] rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-[#6836c5] text-black" 
                />
            </div>

            <button 
                type="submit"
                class="bg-[#6836c5] hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg mt-6 transform hover:scale-105 transition-all duration-300"
            >
                Entrar
            </button>

            @if (MensagemErro != null)
            {
                <div class="text-red-500 text-sm text-center mt-4">@MensagemErro</div>
            }
        </form>
    </div>
</div>

@code {
    private string Email { get; set; } = "";
    private string Senha { get; set; } = "";
    private string? MensagemErro;

    private void RealizarLogin()
    {
        if (Email == "usuario@email.com" && Senha == "123")
        {
            MainLayout.DefinirUsuarioLogado(true);
            NavigationManager.NavigateTo("/");
        }
        else
        {
            MensagemErro = "Email ou senha incorretos.";
        }
    }
}
